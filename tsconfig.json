{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2022",
        "lib": ["ES2022"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": false,
        "rootDir": ".",
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "index.ts"
    ],
}
